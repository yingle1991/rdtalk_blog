.user-wrapper {
  position: relative;
  overflow: hidden;
  background-color: #0081ff;
  padding-top: calc(25px + 82rpx);
  padding-bottom: 6rpx;
}
.user-wrapper .user {
  display: flex;
  flex-direction: column;
  flex-direction: row;
  align-items: center;
  position: relative;
  z-index: 5;
  padding: 20rpx 30rpx 60rpx;
}
.user-wrapper .user .avatar {
  flex-shrink: 0;
  width: 130rpx;
  height: 130rpx;
  border-radius: 100px;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  background-color: #fff;
}
.user-wrapper .user .username {
  font-size: 34rpx;
  color: #fff;
}
.user-wrapper .user .group {
  align-self: flex-start;
  padding: 10rpx 14rpx;
  margin: 16rpx 10rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 100rpx;
}
.user-wrapper .user .login-box {
  font-size: 36rpx;
  color: #fff;
}
.user-wrapper .user-background {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 330rpx;
}
.user-wrapper .user-background-arc-line {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 9;
  width: 100%;
  height: 32rpx;
}
.cu-list.menu > .cu-item {
  background-color: rgba(0, 0, 0, 0);
}
.cu-modal .cu-dialog > .cu-bar:first-child .action {
  margin-right: 30rpx;
}
.bg-green {
  background-color: #7FD02B;
}
.my_logo {
  background: none;
  padding: 50rpx 0 30rpx 0;
}
.open-data {
  overflow: hidden;
  display: block;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.my-radius {
  border-radius: 12rpx;
  overflow: hidden;
}
.my-icon image {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  margin: 0 auto;
}
.my-iconcolor {
  background: rgba(255, 255, 255, 0.96);
}
.shadow-shop {
  box-shadow: 0rpx 0rpx 90rpx 0rpx rgba(0, 0, 0, 0.1);
}
.qrcode-img {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 350rpx;
  right: 30rpx;
  z-index: 1024;
  opacity: 0.8;
  box-shadow: 0rpx 8rpx 30rpx 0rpx rgba(0, 0, 0, 0.3);
  border: none;
}
.text-my {
  font-size: 32rpx !important;
  color: #aaa !important;
}
.social-btns .btn {
  transition: all 0.35s;
  transition-timing-function: cubic-bezier(0.31, -0.105, 0.43, 1.59);
}
.social-btns .btn .fa {
  -webkit-transform: scale(0.9);
  transform: scale(0.9);
}
.social-btns .btn.TNbtn {
  background-color: #fff;
}
.social-btns .btn.TNbtn .fa {
  color: #fff;
}
.social-btns .btn {
  /* background-image: linear-gradient(45deg, #f43f3b, #ec008c); */
  background: linear-gradient(45deg, #9A5CE5, #F15BB5, #ec008c, #f43f3b);
  background-size: 500% 500%;
  -webkit-animation: gradientBG 15s ease infinite;
          animation: gradientBG 15s ease infinite;
  color: #fff;
  box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.2);
  opacity: 0.99;
}
@-webkit-keyframes gradientBG {
0% {
    background-position: 0% 50%;
}
50% {
    background-position: 100% 50%;
}
100% {
    background-position: 0% 50%;
}
}
@keyframes gradientBG {
0% {
    background-position: 0% 50%;
}
50% {
    background-position: 100% 50%;
}
100% {
    background-position: 0% 50%;
}
}

